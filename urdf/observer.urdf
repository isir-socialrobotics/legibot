<?xml version="1.0" encoding="UTF-8"?>
<robot name="observer_person_d">
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <!-- <box size="0.1 0.1 0.1"/> -->
        <mesh filename="package://legibot/models/person_standing/meshes/standing.dae"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0.9" />
      <geometry>
        <box size="0.5 0.15 1.8"/>
      </geometry>

      <surface>
        <friction>
          <ode>
            <mu>10.0</mu>
            <mu2>10.0</mu2>
          </ode>
        </friction>
      </surface>
    </collision>

    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0" izz="0.001"/> <!-- Inertia tensor -->
    </inertial>
  </link>


  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.045 0.35 2.18" rpy="0 0.6 -1.57"/>
<!--    <origin xyz="0.045 -0.15 1.78" rpy="0 0.4 -1.57"/>-->
  </joint>


  <link name="camera_link">

    <collision>
      <geometry>
        <box size="0.02 0.02 0.02" />
      </geometry>
    </collision>

<!--    <inertial>-->
<!--      <mass value="0.2"/> &lt;!&ndash; Mass of the object &ndash;&gt;-->
<!--      <inertia ixx="0.001" ixy="0.0" ixz="0.0"-->
<!--               iyy="0.001" iyz="0.0" izz="0.001"/> &lt;!&ndash; Inertia tensor &ndash;&gt;-->
<!--    </inertial>-->

  </link>

  <gazebo reference="camera_link">
    <sensor name="camera" type="camera">
      <camera name="rgb_camera">
<!--        <horizontal_fov>1.047</horizontal_fov> &lt;!&ndash; in radians (approx 60 degrees) &ndash;&gt;-->
        <horizontal_fov>2.2</horizontal_fov>
        <image>
          <width>1920</width> <!-- Image width in pixels -->
          <height>1080</height> <!-- Image height in pixels -->
          <format>B8G8R8</format> <!-- RGB format -->
        </image>
        <clip>
          <near>0.02</near> <!-- Near clipping distance in meters -->
          <far>100</far> <!-- Far clipping distance in meters -->
        </clip>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.007</stddev>
        </noise>
      </camera>
      <plugin filename="libgazebo_ros_camera.so"  name="observer_camera">
        <alwaysOn>true</alwaysOn>
        <updateRate>30.0</updateRate>
        <cameraName>/observer/camera</cameraName>
        <imageTopicName>image_raw</imageTopicName>
        <cameraInfoTopicName>camera_info</cameraInfoTopicName>
        <frameName>rgb_camera_link</frameName>
      </plugin>
    </sensor>
  </gazebo>

</robot>